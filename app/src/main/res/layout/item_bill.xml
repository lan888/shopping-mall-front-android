<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_bill_num"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_below="@id/bill_createAt"
            android:text="@string/ORDERS_ORDER_NO"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/bill_num"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="订单号"
            android:textSize="20sp"
            android:layout_below="@id/tv_bill_num"
            />
        <TextView
            android:id="@+id/bill_createAt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/tv_customer_name"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:text="@string/ORDERS_RECIPIENT"
            android:textSize="20sp"
            android:layout_below="@id/bill_num"
            />
        <TextView
            android:id="@+id/customer_name"
            android:layout_width="80dp"
            android:text="收件人"
            android:textSize="20dp"
            android:layout_below="@id/tv_customer_name"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_below="@id/bill_createAt"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_bill_num"
            android:text="@string/ORDERS_ORDER_STATUS"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/order_status"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginLeft="120dp"
            android:layout_below="@id/tv_order_status"
            android:text="订单状态"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_pay_status"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_bill_num"
            android:layout_below="@id/order_status"
            android:text="@string/ORDERS_PAYMENT_STATUS"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/pay_status"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/tv_bill_num"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/tv_pay_status"
            android:text="支付状态"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/tv_shipping_status"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_below="@id/bill_createAt"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_order_status"
            android:text="@string/ORDERS_SHIPPING_STATUS"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/shipping_status"
           android:layout_below="@id/tv_shipping_status"
            android:layout_toEndOf="@id/tv_order_status"
            android:layout_toRightOf="@id/tv_order_status"
            android:layout_marginLeft="20dp"
            android:layout_width="150dp"
            android:text="运输状态"
            android:textSize="20dp"
            android:layout_height="25dp" />
        <TextView
            android:id="@+id/totalPay_tv"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="250dp"
            android:layout_width="80dp"
            android:text="@string/ORDER_TOTAL"
            android:textSize="20dp"
            android:layout_height="25dp" />
        <TextView
            android:id="@+id/totalPay"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="250dp"
            android:layout_width="80dp"
            android:text="总金额:"
            android:textSize="20dp"
            android:textColor="@color/md_red_500"
            android:layout_height="50dp" />

    </RelativeLayout>



</android.support.v7.widget.CardView>