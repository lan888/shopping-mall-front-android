<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <cn.guzzu.shoppingmall.widget.NoScrollViewPager
        android:layout_above="@id/bottom"
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="6dp"
                android:visibility="gone"
                android:alpha="0"
                android:tag="toolbar"
                app:navigationIcon="@drawable/ic_chevron_left_black_24dp"
                >
                <android.support.design.widget.TabLayout
                    android:id="@+id/tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:alpha="0"
                    app:tabBackground="@color/white"
                    app:tabIndicatorHeight="2dp"
                    app:tabGravity="fill"
                    app:tabMode="scrollable"
                    app:tabIndicatorColor="@color/colorPrimary"
                    app:tabSelectedTextColor="@color/colorPrimaryDark"
                    />
            </android.support.v7.widget.Toolbar>

        </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="12dp">
        <cn.guzzu.baselibrary.widget.CircleImageView
            android:id="@+id/iv_circle_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_chevron_left_white_36dp"
            app:civ_fill_color="@color/md_grey_600"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/bottom"
        android:alpha="0.4"
        android:background="#dddddd" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/bottom"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="客服"
                android:drawableTop="@drawable/ic_person_24dp"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:background="@color/white"
                android:gravity="center"
                android:layout_weight="1"
                />
            <View
                android:id="@+id/line"
                android:layout_height="match_parent"
                android:layout_width="1dp"
                android:background="@color/md_grey_300"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="收藏"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:gravity="center"
                android:drawableTop="@drawable/ic_favorite_24dp"
                android:textSize="10dp"
                android:background="@color/white"
                android:layout_weight="1"
                />
            <View
                android:id="@+id/line1"
                android:layout_height="match_parent"
                android:layout_width="1dp"
                android:background="@color/md_grey_300"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tv_cart"
                android:text="购物车"
                android:drawableTop="@drawable/ic_shopping_cart_24dp"
                android:background="@color/white"
                android:textSize="10dp"
                android:gravity="center"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tv_buy"
                android:text="立即购买"
                android:gravity="center"
                android:padding="12dp"
                android:background="@color/md_red_500"
                android:textColor="@color/white"
                android:layout_toLeftOf="@id/tv_addcart"
                android:layout_weight="3"
                />
            <TextView
                android:id="@+id/tv_addcart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="12dp"
                android:background="@color/md_red_300"
                android:textColor="@color/white"
                android:text="加入购物车"
                android:layout_weight="3"
                />
    </LinearLayout>
</RelativeLayout>