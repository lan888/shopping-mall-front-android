<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <include layout="@layout/include_toolbar"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:alpha="0.4"
        android:background="#dddddd" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_60"
                android:orientation="horizontal"
                android:background="@color/deep_orange_400">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="未付款"
                    android:textSize="@dimen/font_large"
                    android:id="@+id/tv_status"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="收货地址"
                android:padding="@dimen/len_16"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:paddingLeft="@dimen/len_16"
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/mobilePhone"
                    android:gravity="right"
                    android:paddingRight="@dimen/len_16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/len_16"
                android:paddingBottom="@dimen/len_12"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_pay"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:alpha="0.4"
                    android:background="#dddddd" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:drawableLeft="@drawable/ic_wxpay"
                        android:drawablePadding="@dimen/len_6"
                        android:text="微信支付"
                        android:padding="@dimen/len_6"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent" />
                    <CheckBox
                        android:id="@+id/cb_wx"
                        android:visibility="visible"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:minWidth="32dp"
                        android:minHeight="32dp"
                        android:background="@null"
                        android:button="@null"
                        android:drawableLeft="@drawable/bg_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:alpha="0.4"
                    android:background="#dddddd" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:drawableLeft="@drawable/ic_alipay"
                        android:drawablePadding="@dimen/len_6"
                        android:text="支付宝"
                        android:padding="@dimen/len_6"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent" />
                    <CheckBox
                        android:id="@+id/cb_ali"
                        android:visibility="visible"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:minWidth="32dp"
                        android:minHeight="32dp"
                        android:background="@null"
                        android:button="@null"
                        android:drawableLeft="@drawable/bg_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:alpha="0.4"
                android:background="#dddddd" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/right_arrow"
                    android:gravity="center_vertical"
                    android:padding="@dimen/len_6"
                    android:drawableLeft="@drawable/shop" />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_view"
                android:layout_marginTop="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_subtotal"
                    android:gravity="right"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/label_price"
                    android:id="@+id/tv_subtotal"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/font_normal"
                    android:gravity="right"
                    android:paddingRight="@dimen/len_16"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_discount"
                    android:gravity="right"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/label_price"
                    android:id="@+id/tv_discount"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/font_normal"
                    android:gravity="right"
                    android:paddingRight="@dimen/len_16"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_shipping_cost"
                    android:gravity="right"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/label_price"
                    android:id="@+id/tv_shipping_cost"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/font_normal"
                    android:gravity="right"
                    android:paddingRight="@dimen/len_16"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/len_6">
                <TextView
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_total_cost"
                    android:gravity="right"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/label_price"
                    android:id="@+id/tv_total_cost"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/font_normal"
                    android:gravity="right"
                    android:paddingRight="@dimen/len_16"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/bottom"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_total_paid"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textColor="@color/red_500"
            android:paddingRight="@dimen/len_16"
            android:gravity="right|center"/>
        <com.gc.materialdesign.views.LayoutRipple
            android:id="@+id/tv_buy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/md_red_500"
            app:rippleColor="@color/red_600">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="去支付"
                android:gravity="center"
                android:paddingLeft="@dimen/len_16"
                android:paddingRight="@dimen/len_16"
                android:textColor="@color/white"
                android:layout_weight="1"
                />
        </com.gc.materialdesign.views.LayoutRipple>
    </LinearLayout>
    </RelativeLayout>
</LinearLayout>