<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:id="@+id/img"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginTop="@dimen/font_normal"
        android:paddingLeft="18dp"
        android:textSize="@dimen/font_large"
        android:textStyle="bold"
        android:id="@+id/name"
        android:layout_toRightOf="@id/img"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="@dimen/font_large"
        android:paddingLeft="18dp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:id="@+id/price"
        android:layout_toRightOf="@id/img"
        android:layout_below="@id/name"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/font_normal"
        android:id="@+id/tv_opt"
        android:text="规格："
        android:textColor="@color/md_black_1000"
        android:paddingLeft="@dimen/font_normal"
        android:layout_below="@id/img"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_172"
        android:id="@+id/sv"
        android:layout_below="@id/tv_opt">
        <cn.guzzu.shoppingmall.widget.FlowRadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/option"
            />
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv1"
        android:text="数量:"
        android:textColor="@color/md_black_1000"
        android:layout_below="@id/sv"
        android:paddingTop="@dimen/font_small"
        android:paddingLeft="@dimen/font_normal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/max"
        android:text="In stock"
        android:textColor="@color/red"
        android:padding="8dp"
        android:layout_below="@id/tv1"/>
    <cn.guzzu.shoppingmall.widget.ShoppingCartAmountView
        android:id="@+id/amount_view"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@id/sv"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/len_12"
        android:layout_marginLeft="@dimen/len_6"
        android:layout_marginTop="@dimen/len_6"
        app:btnTextSize="@dimen/font_large"
        app:btnWidth="36dp"
        app:tvWidth="48dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/max"
        >
        <com.gc.materialdesign.views.LayoutRipple
            android:id="@+id/btn_buy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/md_red_500"
            app:rippleColor="@color/red_600">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="立即购买"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/white"
                />
        </com.gc.materialdesign.views.LayoutRipple>
        <com.gc.materialdesign.views.LayoutRipple
            android:id="@+id/tv_addcart"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/md_red_300"
            app:rippleColor="@color/red_400">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:textColor="@color/white"
            android:text="加入购物车"
            android:layout_weight="1"
            />
        </com.gc.materialdesign.views.LayoutRipple>
    </LinearLayout>

</RelativeLayout>